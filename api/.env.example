# ============================================
# BroncoFit Backend Environment Configuration
# ============================================
# Copy this file to .env and update the values
# DO NOT commit .env file to version control

# MongoDB Configuration
# ---------------------
# Connection string for MongoDB database
# For local development: mongodb://localhost:27017
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_URI=mongodb://localhost:27017

# Database name to use
DATABASE_NAME=broncofit

# JWT Authentication Configuration
# ---------------------------------
# Secret key for signing JWT tokens (REQUIRED)
# Generate a secure random string for production
# Example: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production

# JWT algorithm (default: HS256)
JWT_ALGORITHM=HS256

# Token expiration time in minutes (default: 1440 = 24 hours)
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# API Server Configuration
# -------------------------
# Host address (0.0.0.0 allows external connections)
API_HOST=0.0.0.0

# Port number for the API server
API_PORT=8000

# Optional: Environment indicator
# --------------------------------
# Useful for conditional logic (development, staging, production)
# ENVIRONMENT=development
